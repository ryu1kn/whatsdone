{
  "name": "whatsdone-app",
  "private": true,
  "engines": {
    "node": ">= 8"
  },
  "config": {
    "BUILD_DIR_NAME": "dist"
  },
  "scripts": {
    "build": "yarn && yarn run compile && ./build.sh",
    "compile": "tsc -p ./",
    "pretest": "yarn run compile",
    "test": "mocha --opts mocha.opts",
    "lint": "tslint -p tslint.json",
    "coverage": "nyc yarn test",
    "predeploy": "yarn run build",
    "deploy": "cd ops && yarn && kumo deploy-module --verbose",
    "destroy": "cd ops && kumo destroy-module --verbose"
  },
  "dependencies": {
    "aws-sdk": "~2.255.1",
    "aws-xray-sdk": "~1.2.0",
    "lodash": "~4.17.10",
    "route-parser": "0.0.5",
    "uuid": "~3.2.1"
  },
  "devDependencies": {
    "@types/mocha": "^5.2.2",
    "@types/node": "^8.10.19",
    "chai": "^4.1.2",
    "mocha": "^5.2.0",
    "nyc": "^12.0.2",
    "sinon": "^6.0.0",
    "sinon-chai": "^3.2.0",
    "ts-node": "^6.1.1",
    "tslint": "^5.10.0",
    "typescript": "^2.9.1"
  }
}
