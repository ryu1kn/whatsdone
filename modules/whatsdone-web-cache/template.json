{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "What's Done Content Delivery",
  "Parameters": {
    "PublicDomain": {
      "Type": "String"
    },
    "WebappDomain": {
      "Type": "String"
    },
    "WebappBasePath": {
      "Type": "String"
    },
    "LoggingBucket": {
      "Type": "String"
    }
  },
  "Mappings": {
    "Variables": {
      "CloudFrontDistribution": {
        "HostedZoneId": "Z2FDTNDATAQYW2"
      }
    }
  },
  "Resources": {
    "CloudFrontDistribution": {
      "Type": "AWS::CloudFront::Distribution",
      "Properties": {
        "DistributionConfig": {
          "Aliases": [{"Ref": "PublicDomain"}],
          "CacheBehaviors": [
            {
              "Compress": true,
              "ForwardedValues": {
                "QueryString": true
              },
              "PathPattern": "/static/*",
              "TargetOriginId": "whatsdone-assets",
              "ViewerProtocolPolicy": "https-only"
            }
          ],
          "DefaultCacheBehavior": {
            "ForwardedValues": {
              "Cookies": {
                "Forward": "all"
              },
              "QueryString": true
            },
            "AllowedMethods": ["DELETE", "GET", "HEAD", "OPTIONS", "PATCH", "POST", "PUT"],
            "Compress": true,
            "DefaultTTL": 0,
            "MaxTTL": 0,
            "MinTTL": 0,
            "TargetOriginId": "whatsdone-assets",
            "ViewerProtocolPolicy": "https-only"
          },
          "Enabled": true,
          "HttpVersion": "http2",
          "Logging": {
            "Bucket": {"Fn::Sub": "${LoggingBucket}.s3.amazonaws.com"},
            "Prefix": "cloudfront-whatsdone",
            "IncludeCookies": true
          },
          "Origins": [
            {
              "DomainName": {"Ref": "WebappDomain"},
              "OriginPath": {"Ref": "WebappBasePath"},
              "Id": "whatsdone-assets",
              "CustomOriginConfig": {
                "OriginProtocolPolicy": "https-only"
              }
            }
          ],
          "DefaultRootObject": "index.html",
          "PriceClass": "PriceClass_All",
          "ViewerCertificate": {
            "AcmCertificateArn": "arn:aws:acm:us-east-1:650892143834:certificate/e6b12c23-57a8-4314-a125-0af07077140b",
            "MinimumProtocolVersion": "TLSv1",
            "SslSupportMethod": "sni-only"
          }
        }
      }
    }
  },
  "Outputs": {
    "CloudFrontDistributionDomainName": {
      "Description": "CloudFront Distribution domain name",
      "Value": {
        "Fn::GetAtt": ["CloudFrontDistribution", "DomainName"]
      }
    }
  }
}
