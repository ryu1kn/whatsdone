{
  "moduleName": "whatsdone-assets",
  "config": {
    "script": "node -p \"JSON.stringify(require('./module-config/$KUMO_ENV.js'))\""
  },
  "tasks": [
    {
      "id": "create-assets-bucket",
      "type": "cf-stack",
      "stackName": "assetsBucket",
      "stackTemplate": {
        "script": "cp ./template.json $KUMO_TEMPLATE_OUTPUT_FILE"
      },
      "stackParams": {
        "BucketName": {"$ref": "#/_deploymentConfig/bucketName"}
      }
    },
    {
      "id": "upload-assets",
      "type": "custom",
      "run": {
        "script": "./upload-assets.sh $KUMO_DEPLOYMENT_CONFIG"
      }
    }
  ]
}
