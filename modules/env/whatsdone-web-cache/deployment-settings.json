{
  "moduleName": "whatsdone-web-cache",
  "config": {
    "script": "node -p \"JSON.stringify(require('./module-config/$KUMO_ENV.js'))\""
  },
  "outputsStore": {
    "type": "s3-bucket",
    "region": {"$ref": "#/_args/region"},
    "bucket": "whatsdone-deployment-outputs",
    "prefix": {"Fn::Join": ["/", [{"$ref": "#/_env"}, "whatsdone-web-cache"]]}
  },
  "dataSources": {
    "whatsdone-config": {
      "type": "s3-bucket",
      "region": {"$ref": "#/_args/region"},
      "bucket": "whatsdone-deployment-outputs",
      "key": {"Fn::Join": ["/", [{"$ref": "#/_env"}, "whatsdone-config"]]}
    },
    "whatsdone-env": {
      "type": "s3-bucket",
      "region": {"$ref": "#/_args/region"},
      "bucket": "whatsdone-deployment-outputs",
      "key": {"Fn::Join": ["/", [{"$ref": "#/_env"}, "whatsdone-env"]]}
    },
    "whatsdone-assets": {
        "type": "s3-bucket",
        "region": {"$ref": "#/_args/region"},
        "bucket": "whatsdone-deployment-outputs",
        "key": {"Fn::Join": ["/", [{"$ref": "#/_env"}, "whatsdone-assets"]]}
    }
  },
  "tasks": [
    {
      "id": "export-public-domain-name",
      "type": "custom",
      "run": {
        "script": "echo \\\"$PUBLIC_DOMAIN_NAME\\\" > $KUMO_TASK_OUTPUTS_FILE",
        "envVars": {
          "PUBLIC_DOMAIN_NAME": {"$ref": "#/_deploymentConfig/publicDomain"}
        }
      },
      "outputsName": "PublicDomain"
    },
    {
      "id": "prepare-cloudfront",
      "type": "cf-stack",
      "stackName": {"Fn::Join": ["-", [{"$ref": "#/_env"}, "whatsdone-web-cache-module"]]},
      "stackTemplate": {
        "script": "cp ./template.json $KUMO_TEMPLATE_OUTPUT_FILE"
      },
      "stackParams": {
        "PublicDomain": {"$ref": "#/_deploymentOutputs/PublicDomain"},
        "CloudFrontOriginAccessIdentity": {"$ref": "#/_dataSourceData/whatsdone-config/CloudFrontOriginAccessIdentity/Id"},
        "LoggingBucket": {"$ref": "#/_dataSourceData/whatsdone-env/Bucket"},
        "AssetBucketDomain": {"$ref": "#/_dataSourceData/whatsdone-assets/BucketDomain"}
      }
    }
  ]
}
