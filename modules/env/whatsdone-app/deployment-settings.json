{
    "moduleName": "whatsdone-app",
    "outputsStore": {
        "type": "s3-bucket",
        "region": {"$ref": "#/_args/region"},
        "bucket": "whatsdone-deployment-outputs",
        "prefix": {"Fn::Join": ["/", [{"$ref": "#/_env"}, "whatsdone-app"]]}
    },
    "tasks": [
        {
            "id": "build-lambda-app",
            "type": "custom",
            "run": {
                "script": "./build.sh"
            }
        },
        {
            "id": "package-lambda",
            "type": "custom",
            "run": {
                "script": "kumo upload-package --build-number $BUILD_NUMBER --region $KUMO_TASK_REGION --upload-bucket lambda-packages-cg3j2bu2 --output $KUMO_TASK_OUTPUTS_FILE"
            },
            "outputsName": "packages"
        }
    ]
}
