{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "What's Done Environment Wide Resources",
  "Parameters": {
    "BucketName": {
      "Type": "String"
    }
  },
  "Resources": {
    "Bucket": {
      "Type" : "AWS::S3::Bucket",
      "DeletionPolicy": "Retain",
      "Properties" : {
        "BucketName" : {"Ref": "BucketName"}
      }
    }
  },
  "Outputs": {
    "Bucket": {
      "Description": "Bucket for the project",
      "Value": {
        "Ref": "Bucket"
      }
    }
  }
}
