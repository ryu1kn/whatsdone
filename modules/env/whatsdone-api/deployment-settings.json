{
    "moduleName": "whatsdone-api",
    "dependsOn": [
      "../whatsdone-app",
      "../whatsdone-web-cache"
    ],
    "config": {
        "script": "node -p \"JSON.stringify(require('./module-config/$KUMO_ENV.js'))\" | kumo decrypt --profile $KUMO_ENV --inputFormat json"
    },
    "tasks": [
        {
            "id": "fetch-certificate-arn",
            "type": "custom",
            "run": {
              "script": "aws acm list-certificates --region us-east-1 --query CertificateSummaryList | jq 'map(select(.DomainName == \"*.ryuichi.io\") | .CertificateArn)[0]' > $KUMO_TASK_OUTPUTS_FILE"
            },
            "outputsName": "certificateArn"
        },
        {
            "id": "deploy-api",
            "type": "cf-stack",
            "stackName": "module",
            "stackTemplate": {
              "script": "cp ./template.json $KUMO_TEMPLATE_OUTPUT_FILE"
            },
            "stackParams": {
              "EnvName": {"$ref": "#/_env"},
              "DomainName": {"$ref": "#/_deploymentConfig/domainName"},
              "HostedZoneId": {"$ref": "#/_deploymentConfig/hostedZoneId"},
              "CertificateArn": {"$ref": "#/_deploymentOutputs/whatsdone-api/certificateArn"},
              "DbRegion": {"$ref": "#/_taskRegion"},
              "WebappDomain": {"$ref": "#/_deploymentOutputs/whatsdone-web-cache/PublicDomain"},
              "DoneTableName": {"$ref": "#/_deploymentConfig/doneTableName"},
              "UserTableName": {"$ref": "#/_deploymentConfig/userTableName"},
              "SessionTableName": {"$ref": "#/_deploymentConfig/sessionTableName"},
              "SessionSecret": {"$ref": "#/_deploymentConfig/sessionSecret"},
              "LambdaS3Bucket": {"$ref": "#/_deploymentOutputs/whatsdone-app/packages/whatsdone-app/s3Bucket"},
              "LambdaS3Key": {"$ref": "#/_deploymentOutputs/whatsdone-app/packages/whatsdone-app/s3Key"}
            }
        },
        {
            "id": "create-new-deployment",
            "type": "custom",
            "run": {
              "script": "aws apigateway create-deployment --rest-api-id $REST_API_ID --stage-name $STAGE_NAME --region $KUMO_TASK_REGION",
              "envVars": {
                "REST_API_ID": {"$ref": "#/_deploymentOutputs/whatsdone-api/RestApiId"},
                "STAGE_NAME": {"$ref": "#/_deploymentOutputs/whatsdone-api/ApiStageName"}
              }
            }
        }
    ]
}
